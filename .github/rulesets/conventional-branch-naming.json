{
  "name": "Conventional Branch Naming",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "exclude": [
        "refs/heads/main",
        "refs/heads/master",
        "refs/heads/develop",
        "refs/heads/staging",
        "refs/heads/production"
      ],
      "include": [
        "~ALL"
      ]
    }
  },
  "rules": [
    {
      "type": "creation",
      "parameters": {
        "restricted_ref_names": {
          "patterns": [
            {
              "operator": "regex",
              "pattern": "^(?!refs/heads/(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)/.+$).*"
            }
          ]
        }
      }
    },
    {
      "type": "update",
      "parameters": {
        "update_allows_fetch_and_merge": true
      }
    }
  ],
  "bypass_actors": [
    {
      "actor_id": 5,
      "actor_type": "RepositoryRole",
      "bypass_mode": "always"
    }
  ]
}
